{
  "name": "f1-champs",
  "version": "0.1.0",
  "description": "Are you a true Formula 1 champion?",
  "author": "brenttimmermans <brenttimmermans7@gmail.com>",
  "license": "ISC",
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && react-router build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/tailwind.css",
    "dev": "concurrently \"npm run dev:css\" \"react-router dev\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/tailwind.css",
    "start": "npx @react-router/serve build/server/index.js",
    "typecheck": "tsc"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.0.0",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@react-router/dev": "^7.0.0",
    "@react-router/serve": "^7.0.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "autoprefixer": "^10.4.4",
    "concurrently": "^7.0.0",
    "eslint": "^8.9.0",
    "postcss": "^8.4.12",
    "prettier": "^2.6.0",
    "tailwindcss": "^3.0.23",
    "typescript": "^5.0.0",
    "vite": "^6.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSameLine": false,
    "bracketSpacing": true,
    "embeddedLanguageFormatting": "auto",
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxSingleQuote": false,
    "printWidth": 80,
    "proseWrap": "always",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  }
}
